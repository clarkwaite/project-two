<h1>Beverages of {{user.first_name}}</h1>

<ul>
    {{# each user.beverages}}
        <li>
            <div>Name: <a href="/users/{{../user._id}}/beverages/{{_id}}">{{name}}</a></div>
            <div>Type: {{type}}</div>
            <div>Consumption Date: {{drinkDate}}</div>
            <div>Style: {{style}}</div>
            <div>Price: ${{price}}</div>
            <div>Rating Out of 100: {{rating}}</div>
            <div>Drinkable: {{drinkable}}</div>
            <div>Comments: {{comments}}</div>
        </li>
        <br>
    {{/ each}}
</ul>
<div><a href="/users/{{user._id}}/beverages/new">Add A New Beverage</a></div>
<div><a href="/users/{{user._id}}">Back to Users</a></div>
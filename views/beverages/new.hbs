
<form class='form, new-beverage' method="POST" action="/users/{{userId}}/beverages">
    <h1>Add A New Drink</h1>
    <br>
    <div class="form-group">
        <label>Name:</label>
        <input type="text" autocomplete="false" required class="form-control" name="name" placeholder="Enter Name" />
        <br> {{!--radio buttons--}}
        <fieldset class="form-group">
            <label>Type:</label>
            <div class="form-check">
                <label class="form-check-label">
        <input type="radio" required class="form-check-input" name="type" id="Beer" value="Beer">
                    Beer
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
        <input type="radio" required class="form-check-input" name="type" id="Wine" value="Wine">
                    Wine
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
        <input type="radio" required class="form-check-input" name="type" id="Spirits" value="Spirits">
                    Spirits
                </label>
            </div>
        </fieldset>
        {{!--end radio--}}
        <br>
        <label>Style:</label>
        <input type="text" autocomplete="false" class="form-control" name="style" placeholder="Enter Style" />
        <br>
        <label>Consumption Date:</label>
        <input type="date" required class="form-control" name="drinkDate" placeholder="When Did You Drink It?" />
        <br>
        <label>Price:</label>
        <div class="form-group">
            <label class="sr-only" autocomplete="false">Amount (in dollars)</label>
            <div class="input-group">
                <div class="input-group-addon">$</div>
                <input type="text" name="price" class="form-control" id="price" placeholder="Amount">
            </div>
        </div>
<br>
 <fieldset class="form-group">
         <label>Rating Out of 5:</label>
            <div class="form-check">
                <label class="form-check-label">
        <input type="radio" class="form-check-input" name="rating" id="1" value="1">
                    One&nbsp&nbsp
                </label>
                <label class="form-check-label">
        <input type="radio" class="form-check-input" name="rating" id="2" value="2">
                    Two&nbsp&nbsp 
                </label>
                <label class="form-check-label">
        <input type="radio" class="form-check-input" name="rating" id="3" value="3">
                    Three&nbsp&nbsp 
                </label>
                <label class="form-check-label">
        <input type="radio" class="form-check-input" name="rating" id="4" value="4">
                    Four&nbsp&nbsp 
                </label>
                <label class="form-check-label">
        <input type="radio" class="form-check-input" name="rating" id="5" value="5">
                    Five&nbsp&nbsp 
                </label>
            </div>
        </fieldset>
        <br>
        <label>Comments</label>
        <input type="text" autocomplete="false" class="form-control" name="comments" placeholder="Add Comments" />
        <br>
    </div>
    <input type="submit" class="btn btn-default, dropdown-toggle"></button>
       <a href="/users/{{userId}}/beverages"> <input type='button' value="Cancel" class="btn btn-danger, cancel-button"></button></a>
</form>

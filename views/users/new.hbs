<form class='form' method="POST" action="/users">
    <h1>Create Your drinkable Account</h1>
    <br>
    <div class="form-group">
            <label>First Name</label>
            <input type="text" autocomplete="false" required class="form-control" name="first_name" placeholder="Enter First Name" />
            <br>
            <label>Last Name*</label>
            <input type="text" autocomplete="false" required class="form-control" name="last_name" placeholder="Enter Last Name" />
            <br>
            <label>Email Address*</label>
            <input type="text" autocomplete="false" required class="form-control" name="email" placeholder="Enter Email Address" />
    </div>
    <input type="submit" class="btn btn-default, dropdown-toggle"></button>
</form>